<div class="container content" style="width: 50%; margin-top: 10%">
  <div class="container" style="width: 50%;">
    <h3 style="text-align: center">Log In</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <p class="control has-icons-left has-icons-right">
          <%= f.email_field :email, class: "input is-normal", type: "email", placeholder: "Email" %>
          <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        </p>
      </div>
      <div class="field">
        <p class="control has-icons-left">
          <%= f.password_field :password, class: "input", type: "password", placeholder: "Password" %>
          <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
        </p>
      </div>
      <% if devise_mapping.rememberable? %>
        <label class="checkbox">
          <%= f.check_box :remember_me, class: "checkbox" %>
          Remember me
        </label>
      <% end %>
      <div class="content"></div>
      <nav class="level">
        <div class="level-item has-text-centered">
          <div>
            <%= f.submit "Log in", class: "button is-primary is-rounded", style: "margin-left: 40%" %>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <%= link_to("Forgot password?", new_password_path(resource_name), class: "button is-light is-rounded") %><br />
          </div>
        </div>
      </nav>

    <% end %>
  </div>

</div>